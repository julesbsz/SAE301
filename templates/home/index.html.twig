{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}

    <header id="home">
        <img src="{{ asset('build/header-bg.png') }}" alt="Site de Reims Evenements">
    </header>


    <section class="home">
        <h1>Événements à la Une </h1>
        <a class="links" href="{{ path('app_events', {'id': 'tous'}) }}">Voir tous nos événements</a>

        <div id="gradient">
            <section id="slider">
                {% for event in events %}
                    <article class="slide">
                        <img class="{{ 'link-' ~ event.id }}" src="{{ asset("build/" ~ event.image) }}" alt={{ event.name }}>
                        <div class="slide-content">
                            <div class="slide-text">
                                <div class="slide-title">
                                    <h2>{{ event.name }}</h2>
                                    <p>{{ event.date }}</p>
                                </div>
                            </div>
                        </div>
                    </article>
                {% endfor %}
            </section>
        </div>

        <h1>La ville de Reims</h1>
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d83334.62895884368!2d3.985068322741968!3d49.25351938099755!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47e974334a533b09%3A0x40a5fb99a3b45c0!2s51100%20Reims!5e0!3m2!1sfr!2sfr!4v1670197171984!5m2!1sfr!2sfr" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
    </section>
{% endblock %}
