{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}

    <header id="home">
        <img src="{{ asset('build/header-bg.png') }}" alt="Site de Reims Evenements">
    </header>


    <section class="home">
        <h1> Evènement à la une </h1>

        <section id="slider">
        {% for event in events %}
            <article class="slide">
                <img class="{{ 'link-' ~ event.id }}" src="{{ asset("build/" ~ event.image) }}" alt={{ event.name }}>
                <div class="slide-content">
                    <div class="slide-text">
                    
                        <div class="slide-title">
                            <h2>{{ event.name }}</h2>
                            <p>{{ event.date }}</p>
                        </div>
                    {# <a href="{{ path('event_show', {'id': event.id}) }}" class="btn">Voir l'évènement</a> #}
                    </div>
                </div>
            </article>
        {% endfor %}
        </div>
            



    </section>
{% endblock %}
